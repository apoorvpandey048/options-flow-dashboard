# Copy this file to .env and add your API keys

# JWT Secret Key - REQUIRED! Generate a strong random key
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-strong-random-secret-key-here-change-this

# Polygon.io API Key (for real-time options data)
# Get free tier at: https://polygon.io/
POLYGON_API_KEY=your_polygon_api_key_here

# Alpha Vantage API Key (alternative/backup)
# Get free at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# CORS - Allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Flask settings
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-in-production
